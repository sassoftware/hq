<plugin name="apache">
  <property name="PLUGIN_VERSION" value="5.8.0"/>

  <!-- ApacheStatusCollector extends HTTPCollector -->
  <classpath>
    <include name="pdk/plugins/netservices-plugin.jar"/>
  </classpath>

  <!--
    rather than load the entire NETWORK-SERVICES-MIB.txt
    define the OID for the one object type used.
  -->
  <property name="applInboundAssociations"
            value="1.3.6.1.2.1.27.1.1.8"/>

  <!-- first part of snmpIndexValue (1.3.6.1.2.1.6.)
       is the tcp protocol id, see ietf-mibs/WWW-MIB.txt -->
  <filter name="vhost.config"
          value="snmpIndexName=wwwServiceName->wwwServiceProtocol,snmpIndexValue=%server.name%->1.3.6.1.2.1.6.%server.port%"/>

  <!-- we need to lookup the index first, then combine that value
       with the give oid value.  for example:
         .....wwwResponseOutResponses.1.401
       where:
        wwwResponseOutResponses = snmpVarName
        1                       = snmpIndexValue (after the lookup)
        401                     = snmpOID
   -->
  <filter name="oid.config"
          value="${vhost.config},snmpVarType=oid,snmpOID"/>

  <filter name="apache.snmp"
          value="apache:${snmp.config}"/>

  <!-- start properties generated by helpers/rr_metrics.pl -->

  <filter name="wwwRequestInBytes"
          value="${apache.snmp}:wwwRequestInBytes:${oid.config}"/>

  <filter name="wwwRequestInRequests"
          value="${apache.snmp}:wwwRequestInRequests:${oid.config}"/>

