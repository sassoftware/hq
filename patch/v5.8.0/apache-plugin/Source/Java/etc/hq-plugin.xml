            alias="Availability"
            template="%protocol%:${url.config},hostheader=%server.name%:${alias}"
            category="AVAILABILITY"
            group="Reliability"
            indicator="true"
            units="percentage"
            collectionType="dynamic"/>

    <metric name="Total Number of Bytes Received"
            alias="InLowBytes"
            template="${apache.snmp}:wwwSummaryInLowBytes:${vhost.config}"
            category="THROUGHPUT"
